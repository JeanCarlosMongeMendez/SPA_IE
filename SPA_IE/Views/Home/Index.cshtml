@section scripts {
    <script>
        $('#requestLink').on('click', function () {
            var url = $(this).attr('data');
            $.get(url, function (data) {
                $('#requestContent').html(data);
            });
        });

        $('#editLink').on('click', function () {
            var url = $(this).attr('data');
            $.get(url, function (data) {
                $('#editContent').html(data);
            });
        });

        $('#studentLink').on('click', function () {
            var url = $(this).attr('data');
            $.get(url, function (data) {
                $('#studentsContent').html(data);
            });
        });

        $('#addStudentLink').on('click', function () {
            var url = $(this).attr('data');
            $.get(url, function (data) {
                $('#addStudentContent').html(data);
            });
        });

        $('#addStudentSubmit').on('click', function () {
            var data = new FormData();
            var username = $("#Username").val();
            data.append("Username", username);
            var password = $("#Password").val();
            data.append("Password", password);
            var interest = $("#Interests").val();
            data.append("Interests", interest);
            var email = $("#Email").val();
            data.append("Email", email);
            var idcard = $("#IdentificationCard").val();
            data.append("IdentificationCard", idcard);
            var province = $("#IdProvince").val();
            data.append("IdProvince", province);
            var canton = $("#IdCanton").val();
            data.append("IdCanton", canton);
            var district = $("#IdDistrict").val();
            data.append("IdDistrict", district);
            $.ajax({
                url: '@Url.Action("Create", "Student")',
                type: 'POST',
                data:  data,
                processData: false,
                contentType: false,
                success: function (data) {
                    $('#registerModal').modal('toggle');
                    $('#requestContent').html(data);
                }
            });
        });

        function aprove(link) {
            var url = $(link).attr('data');
            $.get(url, function (data) {
                $('#requestContent').html(data);
                var url = $('#studentLink').attr('data');
                $.get(url, function (data) {
                    $('#studentsContent').html(data);
                });
            });
        }
    </script>
}
