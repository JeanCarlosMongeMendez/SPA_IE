<!-- Modal Add Course -->
<div id="addCourseModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Agregar/Modificar Curso</h4>
            </div>

            <div class="container">
                <input type="text" placeholder="Nombre del curso" name="name" required>
                <br>
                <br>
                <textarea id="txtdescriptionCourse" rows="3" cols="30" placeholder="Descripción del curso"></textarea>
                <br>
                <br>
                <select class="btn btn-default" id="semester">
                    <option selected="selected">Seleccione el semestre...</option>
                    <option value="saab">I Semestre 2020</option>
                    <option value="opel">II Semestre 2020</option>
                    <option value="audi">III Semestre 2020</option>
                </select>
                <br>
                <br>

                <form>
                    <div>
                        <label class="fontModal" for="consultationDay">Seleccione el día:   </label>
                        <br>
                        <input type="date" id="consultationDay" min="2020-01-01" max="2999-12-31">
                    </div>
                    <br />
                    <div>
                        <label class="fontModal" for="startTime">Seleccione la hora de inicio:   </label>
                        <br>
                        <input id="startTime" type="time" value="00:00" max="22:30" min="10:00" step="1">
                    </div>
                    <br />
                    <div>
                        <label class="fontModal" for="endTime">Seleccione la hora de finalización:   </label>
                        <br>
                        <input id="endTime" type="time" value="00:00" max="22:30" min="10:00" step="1">
                    </div>
                </form>

                <br>
                <input type="checkbox" id="state" name="state" value="disponible">
                <label for="state">Disponible</label>
                <br>

            </div>

            <div class="modal-footer">
                <button type="submit" class="button">Agregar</button>
                <button type="button" class="cancelbtn" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>

